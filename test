<body>
    <h1>Valentine's Rock Paper Scissors üíñ</h1>
    <p>Choose Rock, Paper, or Scissors!</p>
    <div class="btn-container">
        <button onclick="playGame('rock')">Rock</button>
        <button onclick="playGame('paper')">Paper</button>
        <button onclick="playGame('scissors')">Scissors</button>
    </div>
    <p id="result"></p>
    
    <script>
        function getComputerChoice() {
            const choices = ["rock", "paper", "scissors"];
            return choices[Math.floor(Math.random() * choices.length)];
        }

        function getWinner(player, computer) {
            if (player === computer) {
                return "It's a tie! üíï";
            } else if (
                (player === "rock" && computer === "scissors") ||
                (player === "scissors" && computer === "paper") ||
                (player === "paper" && computer === "rock")
            ) {
                return "You win! ‚ù§Ô∏è Here's a Valentine for you! üíå";
            } else {
                return "You lose! But I'll still be your Valentine! üòä";
            }
        }

        function playGame(playerChoice) {
            const computerChoice = getComputerChoice();
            const result = getWinner(playerChoice, computerChoice);
            document.getElementById("result").innerHTML = `Your choice: ${playerChoice} üÜö Computer's choice: ${computerChoice}<br><br>${result}`;
        }
    </script>
</body>
